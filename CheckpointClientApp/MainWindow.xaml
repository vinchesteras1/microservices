<Window x:Class="CheckpointClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckpointClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="274.291" Width="335.106">
    <Grid Margin="0,0,13,9">
        <Button x:Name="button" Content="Отправить" Command="{Binding SendCommand}" HorizontalAlignment="Left" Margin="118,185,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="CheckpointId" Text = "{Binding CheckpointId, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="208,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <TextBox x:Name="DriverId" Text = "{Binding DriverId, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="208,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <Label x:Name="label" Content="Номер пропускного пункта:" HorizontalAlignment="Left" Margin="24,57,0,0" VerticalAlignment="Top" Height="27" Width="169" />
        <Label x:Name="label1" Content="Идентификатор водителя:" HorizontalAlignment="Left" Margin="24,106,0,0" VerticalAlignment="Top" Height="27" Width="151"/>

    </Grid>
</Window>
